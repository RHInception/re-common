{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "title": "re-core deployment message format",
    "description": "Schema for simple and dynamic deployments",

    "definitions": {
	"parameters": {
	    "type": "object",
	    "properties": {
		"hosts": {
		    "type": "array",
		    "minItems": 1,
		    "items": {
			"type": "string"
		    }
		},
		"subcommand": { "type": "string" },
		"command": { "type": "string" }
	    },
	    "additionalProperties": true
	},
	"dynamic": {
	    "type": "object"
	},
	"group": {
	    "type": "string"
	},
        "notify": {
            "type": "object",
            "properties": {
                "started": {"$ref": "#/definitions/notify_endpoints"},
                "completed": {"$ref": "#/definitions/notify_endpoints"},
                "failed": {"$ref": "#/definitions/notify_endpoints"}
            },
            "additionalProperties": false
        },
        "notify_endpoints": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        }
    },


    "properties": {
	"parameters": {"$ref": "#/definitions/parameters"},
	"dynamic": {"$ref": "#/definitions/dynamic"},
	"group": {"$ref": "#/definitions/group"},
	"notify": {"$ref": "#/definitions/notify"}
    },

    "required": [ "parameters", "dynamic", "group", "notify" ]
}
